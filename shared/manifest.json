{
	"manifest_version": 2,
	"name": "YouTube Channel Whitelist for uBlock Origin",
	"version": "0.4.6",
	"browser_action": {
		"default_icon": "./img/icon_128.png",
		"default_title": "YouTube Channel Whitelist",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "./img/icon_128.png"
	},
	"content_scripts": [{
		"matches": ["*://www.youtube.com/*"],
		"js": ["main.js"],
		"run_at": "document_start"
	}],
	"permissions": ["storage", "webRequest", "webRequestBlocking", "downloads", "*://*.youtube.com/"],
	"background": {
		"scripts": ["base.js"]
	},
	"applications": {
		"gecko": {
			"id":"{ea0ef8bb-6734-4970-b574-2099e836d636}"
		}
	},
	"web_accessible_resources": ["img/icon_16.png", "agent.js", "style.css"]
}
